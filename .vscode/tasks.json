    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile_Arduino_Uno",
            "type": "shell",
            "command": "arduino-cli compile -v -b arduino:avr:uno Display",
            "group": "build",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Flash_Arduino_Uno",
            "type": "shell",
            "command": "arduino-cli upload -p /dev/tty.usbserial-110 -v --fqbn arduino:avr:uno Display",
            "group": "test",
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        }
    ]
}
